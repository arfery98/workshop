---
const { img, name, price, star , sale } = Astro.props;
---

<li>
    <img class="w-full rounded-2xl" src={img} alt={name} />
    <h3 class="font-bold text-xl mt-2">{name}</h3>
    <p class="mt-2 text-yellow-500 flex items-center">
        {
            Array.from({ length: Math.floor(star) }).map((_, i) => (
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                >
                    <path
                        fill="currentColor"
                        d="m5.825 21l1.625-7.025L2 9.25l7.2-.625L12 2l2.8 6.625l7.2.625l-5.45 4.725L18.175 21L12 17.275z"
                    />
                </svg>
            ))
        }{
            star % 1 !== 0 && (
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                >
                    <path
                        fill="currentColor"
                        d="m15.15 16.85l-.825-3.6l2.775-2.4l-3.65-.325l-1.45-3.4v7.8zM5.825 21l1.625-7.025L2 9.25l7.2-.625L12 2l2.8 6.625l7.2.625l-5.45 4.725L18.175 21L12 17.275z"
                    />
                </svg>
            )
        }

        <span class="text-black ml-2 text-sm">{star}/5</span>
    </p>

    <section class="mt-2">
        {
            sale ? (
                <div class="flex items-center gap-3 text-xl">
                    <p class="font-bold text-2xl">${sale.price}</p>
                    <p class="line-through text-gray-500">${price}</p>
                    <p class="bg-red-200 text-red-600 inline-block rounded-full px-5 text-base">{(sale.percent)}%</p>
                </div>
            ) : (
                <p class="font-bold text-2xl">${price}</p>
            )
        }
    </section>

    
</li>
